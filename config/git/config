[user]
    name = Isao Yagi
    useConfigOnly = true

[include]
    ; Optional configs.
    path = aliases.config
    path = includes.config

[core]
    ; https://github.com/dandavison/delta
    pager = delta

    ; https://news.ycombinator.com/item?id=11388479
    untrackedCache = true

    ; Use macOS FSEvents API to watch for file changes.
    ; fsmonitor = true
    ; ^Disable for now, appears to cause `brew` error "lockf: 200: already locked"

[interactive]
    diffFilter = delta --color-only
    singleKey = true

[pack]
    ;use all cpu cores
    threads = 0

[init]
	defaultBranch = main

[fetch]
    prune = true
    pruneTag = true

[push]
    default = current

[pull]
	ff = only
	rebase = true

[remote]
	pushdefault = origin

[tag]
    ; Sorts tags by version number (e.g. 1.2.10 comes after 1.2.9).
    sort = version:refname

[credential]
    ;for https git uris w/ auth
    helper = osxkeychain

[diff]
    algorithm = histogram
    colorMoved = default
    colorMovedWS = allow-indentation-change

[difftool]
    prompt = no

[merge]
    conflictstyle = zdiff3

    ; list (known) installed options with `git mergetool --tool-help`
    ; Beyond Compare 5 "bcomp" isn't listed !? but bc/bc3/bc4 are, and b4 works
    ; if symlinking bcomp -> bc4
    tool = bc4

[mergetool]
    prompt = no
    keepBackup = false
    tool = bc4

[mergetool "bc4"]
	trustExitCode = true

[delta]
    ; https://github.com/dandavison/delta
    light = true

    ; Enables n/N keys jumpt to the next/prev file/commit/chunk
    navigate = true

    ; https://dandavison.github.io/delta/hyperlinks.html
    hyperlinks = true
    ; delta bug: "No handler for "x-bbedit" link type"
    ;hyperlinks-file-link-format = "x-bbedit://open?url=file:///{path}&line={line}"

    ; To disable the line numbers in side-by-side view, but keep a vertical
    ; delimiter line between the left and right panels, use the line-numbers
    ; format options.
    ;line-numbers-left-format = ""
    ;line-numbers-right-format = "â”‚ "
    line-numbers = true
    side-by-side = true
