[user]
    name = Isao Yagi
    useConfigOnly = true

[include]
    ; Optional configs.
    path = aliases
    path = delta
    path = includes.config

[core]
    ; https://news.ycombinator.com/item?id=11388479
    untrackedCache = true

[pack]
    ;use all cpu cores
    threads = 0

[init]
	defaultBranch = main

[fetch]
    prune = true
    pruneTag = true

[push]
    default = current

[pull]
	ff = only
	rebase = true

[remote]
	pushdefault = origin

[tag]
    ; Sorts tags by version number (e.g. 1.2.10 comes after 1.2.9).
    sort = version:refname

[diff]
    algorithm = histogram
    colorMoved = default
    colorMovedWS = allow-indentation-change

[difftool]
    prompt = no

[merge]
    conflictstyle = zdiff3

    ; list (known) installed options with `git mergetool --tool-help`
    ; Beyond Compare 5 "bcomp" isn't listed !? but bc/bc3/bc4 are, and b4 works
    ; if symlinking bcomp -> bc4
    tool = bc4

[mergetool]
    prompt = no
    keepBackup = false
    tool = bc4

[mergetool "bc4"]
	trustExitCode = true
