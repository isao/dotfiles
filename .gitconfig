[user]
	name = Isao Yagi
	email = isao.yagi@gmail.com

[color]
	;colorize output on console
	ui = auto

[pack]
	; use all cpu cores
	threads = 0

[core]
	;editor = /usr/local/bin/bbedit --wait --resume
	editor = bbedit..sh
	excludesfile = ~/.gitignore

[difftool "bb"]
	;git difftool --tool bb [..]
	cmd = bbdiff..sh $REMOTE $LOCAL

[web]
	;hyperlinked man pages
	browser = lynx

[alias]
	s = status --untracked-files=no
	ss = status --untracked-files=normal
	;bbdiff = difftool --no-prompt --tool bb
	;bbx = !"sh -c \"[ -n $1 -a -n $2 ] && echo --wait --resume $1 $2; exit 0\""

[tig]
	tab-size = 2
	author-width = 3
	show-rev-graph = yes
	horizontal-scroll = 25%

#[tig "bind"]
#	generic = E !"/Users/isao/Desktop/test.sh 1 %(head) 2 %(file) 3"
[cola]
	savewindowsettings = false
	fontdiff = Monaco,11,-1,5,50,0,0,0,0,0
	tabwidth = 2
[gui]
	editor = /usr//usr/local/bin/bbedit/nano
