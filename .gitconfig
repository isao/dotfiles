[user]
	name = Isao Yagi
	email = isao.yagi@gmail.com

[color]
	;colorize output on console
	ui = auto

[pack]
	; use all cpu cores
	threads = 0

[core]
	editor = bbedit --wait --resume

[difftool "bb"]
	;git difftool --tool bb [..]
	cmd = bbdiff --wait --resume $REMOTE $LOCAL

[web]
	;hyperlink man pages
	browser = lynx

[alias]
	s = status --untracked-files=no
	ss = status --untracked-files=normal
	bbdiff = difftool --no-prompt --tool bb

[tig]
	tab-size = 2
	author-width = 3
