[user]
  name = Isao Yagi
  email = isao.yagi@gmail.com

[core]
  pager = less -S
  ;works for git, not tig:
  ;  editor = bbedit --wait --resume
  excludesfile = ~/.gitignore
  quotepath = false

[color]
  ;colorize output on console
  ui = auto

[pack]
  ;use all cpu cores
  threads = 0

[web]
  ;hyperlinked man pages
  browser = lynx

[diff]
  tool = bbdiff
[difftool]
  prompt = no
[difftool "bbdiff"]
  cmd = bbdiff --wait --resume "$LOCAL" "$REMOTE"
[alias]
  bbdiff = difftool

[merge]
  tool = bbdiff
[mergetool]
  prompt = no
[mergetool "bbdiff"]
  cmd = bbdiff --wait --resume "$LOCAL" "$REMOTE"
[alias]
  bbmerge = mergetool

[alias]
  pub = !"for i in origin backup; do echo push $i...; git push $i; done; echo done"
  pull-rebase-no-ff = pull --rebase --no-ff
  ln = log --no-merges --name-status --decorate

[tig]
  author-width = 3
  horizontal-scroll = 25%
  line-graphics = utf8
  show-refs = yes
  show-rev-graph = yes
  tab-size = 2

[tig "bind"]
  ;allow escape to toggle between main and status views
  status = Escape view-main
  main = Escape view-status

  ;generic = < !git stash
  ;generic = > !git stash pop
  generic = ^p !git pull --rebase --no-ff

  ;sends all files to stage or commit to bbdiff
  generic = 2 !git bbdiff

  ;open in bbedit
  ;generic = b !open -b com.barebones.bbedit %(file)
  generic = ^b !bbedit %(file)

  ;reveal current selection in a Finder window
  generic = ^f !open -R %(file)

  ;reveal current selection in a new Terminal window
  generic = ^t !/Users/isao/Repos/shell/osx/terminal/newterm.sh %(directory)

  ;open in gitx
  generic = ^x !gitx -- %(file)
